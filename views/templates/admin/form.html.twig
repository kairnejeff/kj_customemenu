{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}
{% block content %}
    <div class="row justify-content-center">
        <div class="col">
            {% block contact_form %}
                {{ form_start(form) }}
                <div class="card">
                    <h3 class="card-header">
                        <i class="material-icons">mail_outline</i>
                        {{ 'Item'|trans({}, 'Modules.Demodoctrine.Admin') }}
                    </h3>
                    <div class="card-block row">
                        <div class="card-text">
                            {{ form_errors(form) }}

                            {% block item_form_rest %}
                                {{ form_rest(form) }}
                            {% endblock %}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            {% endblock %}

        </div>
    </div>
{% endblock %}

